@page
@model Resources_In_Cache_Web.Pages.Resources.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black-50">Resources</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="/Resources/Create">Add new resource</a>
    </div>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Resources != null && Model.Resources.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th>
                            <label asp-for="@Model.Resources.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Resources.FirstOrDefault().Title"></label>
                        </th>
                        <th class="w-25"></th>
                    </tr>
                    @foreach (var item in Model.Resources)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm w-25 ">Edit</a>
                                <button onclick="return confirm('Are you sure you want to delete?')" asp-route-id="@item.Id" 
                                        asp-page-handler="Delete" class="btn btn-danger btn-sm w-25">Delete</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No resources available</p>
            }
        </form>
    </div>
</div>
